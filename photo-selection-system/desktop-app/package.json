{
  "name": "photo-selection-desktop",
  "version": "1.0.0",
  "description": "Desktop application for photo selection and processing",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build-main -- --watch\" \"npm run build-renderer -- --watch\" \"electron .\"",
    "build": "npm run build-main && npm run build-renderer",
    "build-main": "tsc -p tsconfig.main.json",
    "build-renderer": "webpack --config webpack.renderer.js",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run dist -- --win",
    "dist:linux": "npm run dist -- --linux",
    "dist:mac": "npm run dist -- --mac"
  },
  "keywords": [
    "electron",
    "photo",
    "gallery",
    "selection",
    "processing"
  ],
  "author": "Photo Selection System",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.0",
    "concurrently": "^8.0.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.7.0",
    "style-loader": "^3.3.0",
    "file-loader": "^6.2.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.5",
    "@types/sharp": "^0.32.0",
    "axios": "^1.6.0",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.33.0",
    "zustand": "^4.4.6",
    "zod": "^3.22.4"
  }
}